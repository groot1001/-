/* pages/wxPayPage/wxPayPage.wxss */

page {
  background-color: #f6f6f6;
}

.wxPayPageTop {
  border-radius: 8rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  width: 88%;
  padding: 22rpx;
  margin: 22rpx auto;
  position: relative;
}

.avatarUrl image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.userInfo {
  margin-left: 18rpx;
  height: 80rpx;
}

.phone {
  font-size: 24rpx;
  color: #999;
}

.vip {
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  right: 20rpx;
  transform: rotate(7deg);
}

.course_info {
  border-radius: 8rpx;
  background-color: #fff;
  width: 88%;
  padding: 22rpx;
  margin: 22rpx auto;
}
.nickName{
  font-size: 30rpx;
}
.course_info_box {
  display: flex;
}

.course_img image {
  width: 222rpx;
  height: 156rpx;
  background-color: #f0f0f0;
}

.ctitle {
  font-size: 30rpx;
  color: #666;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ctitle_txt {
  margin-left: 16rpx;
}

.chapter, .studyNum {
  color: #999;
  font-size: 24rpx;
}

.chapter {
  line-height: 62rpx;
}
.tips{
  margin-top: 22rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid #ebebeb;
  font-size: 24rpx;
  color: #888;
}
.coruse_pic{
  
}
.price{
background: linear-gradient(to right,#FFA100,#FE6902);
height: 200rpx;
border-radius: 5rpx;
margin-top: 22rpx;
display: flex;
color: #fff;
align-items: center;
}
.price-item{
  width: 50%;
  font-size: 28rpx;
  text-align: center;
}
.marketPrice{
  font-size: 24rpx!important;
  text-decoration-line: line-through;
}
.price_goods{
  font-size: 36rpx!important;
  font-weight: bold;
}
.payBtn{
  height: 92rpx;
  background: linear-gradient(to right,#FFA100,#FE6902);
  color: #FFFFE0;
  font-size: 32rpx;
  text-align: center;
  line-height:92rpx;
   position: absolute;
   bottom: 0;
   left: 0;
   width: 100%;
   
}