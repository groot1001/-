.videomiddle image {
  width: 222rpx;
  height: 156rpx;
  margin-right: 30rpx;
}

.videoright {
  height: 156rpx;
  width: 100%;
}

.videotit {
  font-size: 30rpx;
  color: rgb(102, 102, 102);
  margin-bottom: 23rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.videodetail {
  margin-top: 5rpx;
}

.videodetailLeft {
  /* width: 255rpx; */
}

.videotea {
  color: rgb(179, 179, 179);
  font-size: 26rpx;
  margin-bottom: 9rpx;
}

.videocourse {
  color: rgb(153, 153, 153);
  font-size: 26rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.continueplay {
  width: 136rpx;
  height: 46rpx;
  border: 3rpx solid rgb(60, 135, 202);
  font-size: 26rpx;
  color: rgb(60, 135, 202);
  border-radius: 40rpx;
  margin-left: 15rpx;
}

/* 底部 */

.deletebox {
  padding-left: 20rpx;
  height: 90rpx;
  position: fixed;
  bottom: 0;
}

.allchooceleft {
  display: flex;
  align-items: center;
  width: 239rpx;
