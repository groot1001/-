/* pages/myplay/myplay.wxss */

.flex {
  display: flex;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-direction {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.myplaybox {
}

.turnback-management {
  height: 88rpx;
  background-color: rgb(60, 135, 202);
  padding: 0 32rpx;
}

.prevbtn {
  color: #fff;
  font-size: 34rpx;
}

.managebtn {
  color: rgb(241, 246, 250);
  font-size: 30rpx;
}

.videolist {
  padding: 0 20rpx;
}

.videolistItem {
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}

.videoleft {
  /* margin-right: 20rpx; */
    width: 55rpx;
}

.noicon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 30rpx;
  border: 1rpx solid rgb(229, 229, 229);
  border-radius: 100%;
}
.noicon1 {
  width: 38rpx;
  height: 38rpx;
  margin-right: 30rpx;
}

.noicon1 icon {
  width: 100%;
}

.haveicon {
  margin-right: 30rpx;
}

